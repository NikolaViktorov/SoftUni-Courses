@using GokoSite.Web.ViewModels.News;

<div class="row">
    <div class="jumbotron col-md-12">
        <div class="heading-container bottom-buffer-md">
            <h1>Welcome to the GOKO League of Legends matches app!</h1>
        </div>

        <h2 style="text-align:center; font-size: 40px;">Recent news!</h2>

        <div class="slideshow-container">
            @if (Model.Count == 0)
            {
                <div class="text-center">
                    <h1>
                        There are no news currently!
                    </h1>
                </div>
            }
            else
            {
                @foreach (NewHomePageViewModel newI in Model)
                {
                    <div class="mySlides">
                        <img class="newsImage" src="@newI.Image">
                        <div class="news-title">@newI.Title</div>
                        <a href="/LOL/New?newId=@newI.NewId" class="btn btn-info text-uppercase news-btn">See more</a>
                    </div>
                }

                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            }
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
            @for (int i = 1; i <= Model.Count; i++)
            {
                <span class="dot" onclick="currentSlide(@i)"></span>
            }
        </div>

        <div class="heading-container bottom-buffer-md">
        </div>

        <h2 class="lol-menu-heading"> Here you can see your latest matches</h2>
        <div class="button-holder">
            <a href="/LOL/lolapp" class="btn btn-info text-uppercase lol-button">League Of Legends match viewer</a>
        </div>

        <p></p>

        <h2 class="lol-menu-heading"> Here is your collection of added games</h2>
        <div class="button-holder">
            <a href="/LOL/Collection" class="btn btn-info text-uppercase lol-button">Collection</a>
        </div>
    </div>
</div>

<script src="~/js/lolSlider.js"></script>
