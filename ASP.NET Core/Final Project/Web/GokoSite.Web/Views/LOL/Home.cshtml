<div class="row">
    <div class="jumbotron col-md-12">
        <div class="heading-container bottom-buffer-md">
            <h1>Welcome to the GOKO League of Legends matches app!</h1>
        </div>

        <h2 style="text-align:center; font-size: 40px;">Recent news!</h2>

        <div class="slideshow-container">
            @*
                Automate with view model

                @foreach (var new in Model.News)
                {
                    <div class="mySlides">
                        <div class="numbertext">1 / @Model.News.Count</div>
                        <img src="@new.Source">
                        <div class="text">@new.Topic</div>
                    </div>
                }
            *@

            <!-- Full-width images with number and caption text -->
            <div class="mySlides">
                <div class="numbertext">1 / 3</div>
                <img class="newsImage" src="~/images/lolNews/img1.jpg">
                <div class="text">Caption Text</div>
            </div>

            <div class="mySlides">
                <div class="numbertext">2 / 3</div>
                <img class="newsImage" src="~/images/lolNews/img2.jpg">
                <div class="text">Caption Two</div>
            </div>

            <div class="mySlides">
                <div class="numbertext">3 / 3</div>
                <img class="newsImage" src="~/images/lolNews/img3.jpg">
                <div class="text">Caption Three</div>
            </div>

            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>

        <h2> Here you can see your latest matches</h2>
        <div class="button-holder">
            <a href="/LOL/lolapp" class="btn btn-info text-uppercase">League Of Legends match viewer</a>
        </div>

        <p></p>

        <h2> Here is your collection of added games</h2>
        <div class="button-holder">
            <a href="/LOL/Collection" class="btn btn-info text-uppercase">Collection</a>
        </div>
    </div>
</div>

<script src="~/js/lolSlider.js"></script>
