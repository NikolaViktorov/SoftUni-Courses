<div class="row">
    <div class="jumbotron col-md-12">
        <div class="heading-container bottom-buffer-md">
            <h1>Here you can add an admin!</h1>
        </div>

        <form class="mx-auto half-width col-5" method="post" asp-controller="Administration" asp-action="AddAdmin">
            <div class="top-border-line primary-separator"></div>

            <label for="topic" class="suls-text-color">User's id</label>
            <input type="text" class="form-control" id="userId" placeholder="User id..." name="userId">

            <div class="top-border-line primary-separator"></div>

            <button type="submit" class="btn forum-add-bg-color">Add!</button>
        </form>
    </div>
</div>
